<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiExample.Views.VerifyAccountProofPage"
             Title="Verify Account Proof Example"
             Shell.NavBarIsVisible="True">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="10">
            <Label HorizontalOptions="Center" Text="{Binding Result}" FontSize="20"/>
            <Button BackgroundColor="BlueViolet" Text="Run Query" Clicked="Verify_Clicked" Margin="0,30,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>